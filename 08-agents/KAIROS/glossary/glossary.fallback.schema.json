{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://neuroreturn.local/schemas/glossary.fallback.schema.json",
  "title": "NeuroReturn Fallback Terms",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "terms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "term",
          "definition",
          "source"
        ],
        "properties": {
          "term": {
            "type": "string"
          },
          "definition": {
            "type": "string"
          },
          "source": {
            "type": "string"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    }
  },
  "required": [
    "terms"
  ]
}