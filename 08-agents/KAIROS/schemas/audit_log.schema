{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://neuroreturn.local/schemas/audit_log.schema.json",
  "title": "KAIROS Audit Event",
  "type": "object",
  "required": [
    "ts",
    "run_id",
    "agent_id",
    "event",
    "severity",
    "actor"
  ],
  "properties": {
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "run_id": {
      "type": "string"
    },
    "agent_id": {
      "type": "string",
      "const": "KAIROS"
    },
    "event": {
      "type": "string"
    },
    "severity": {
      "type": "string",
      "enum": [
        "info",
        "warn",
        "fail",
        "critical"
      ]
    },
    "actor": {
      "type": "string",
      "enum": [
        "User",
        "KAIROS",
        "ARKHIVAR",
        "System"
      ]
    },
    "phase": {
      "type": "string",
      "enum": [
        "F0",
        "F1",
        "F2",
        "F3"
      ]
    },
    "ci_result": {
      "type": "string",
      "enum": [
        "pass",
        "warn",
        "fail"
      ]
    },
    "risk_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "artifact_refs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "citations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
